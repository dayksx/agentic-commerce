# Empêche les installations implicites
auto-install-peers=false

# Vérifie que les dépendances sont bien déclarées
strict-peer-dependencies=true

# Toujours utiliser le lockfile de pnpm
prefer-frozen-lockfile=true

# Utilise le cache global de pnpm
shared-workspace-lockfile=true

# Garde une structure de node_modules lisible (utile pour tooling)
node-linker=hoisted

# Affiche moins de bruit pendant l'installation
reporter=silent

# Toujours conserver le lockfile (pnpm-lock.yaml)
lockfile-only=false
